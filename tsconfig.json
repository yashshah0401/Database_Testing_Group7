{
  "compilerOptions": {
    // File Structure
    "rootDir": "./src",
    "outDir": "./dist",

    // Target Environment
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Type Definitions
    "types": ["node", "jest"],

    // TypeScript Features
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Output Options
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Others
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}